body {
	-webkit-font-smoothing: antialiased;
}

h1 {
	height: 49px;
	width: 49px;
	margin: 0 auto !important;
	margin-bottom: 20px !important;
	background-size: 49px 49px;
	background-image: url(<%= asset_path 'logo.png' %>);
}

h1 span {
	display: none;
}

a:hover {
	color: #33CC66;
}

header {
	padding-top: 35px;
	padding-bottom: 20px;
	margin-bottom: 35px;
	border-bottom: 1px solid #EEE;
}

nav ul {
	text-align: center;
	font-family: "futura-pt";
}

nav ul li {
	display: inline-block;
	margin-right: 30px;
	font-size: 20px;
	letter-spacing: 0.10em;
	font-weight: normal;
}

nav ul li:last-child {
	margin-right: 0px;
}

nav ul li a {
	color: #999;
}

h2 {
	background-size: 10px 10px;
	background-image: url(<%= asset_path 'dot.png' %>);
	background-repeat: no-repeat;
	background-position: center top;
	font-family: "futura-pt";
	text-align: center;
	font-size: 20px !important;
	letter-spacing: 0.10em;
	padding-top: 30px !important;
	margin-bottom: 20px !important;
	display: block;
}

section {
	margin-bottom: 40px;
}

section:last-child {
	margin-bottom: 80px;
}

section p {
	font-family: "futura-pt";
	font-size: 30px;
	line-height: 37px;
	width: 640px;
	margin: 0 auto;
}

section p a {
	color: #000;
	text-decoration: underline;
	/*border-bottom: 2px solid #000;*/
}

section p a:hover {
	color: #33CC66;
}

section.where {
	margin-bottom: 80px;
}

section.recent-work {
	padding-top: 35px;
	background: #66FF99;
	margin-bottom: 0px;
}

section.recent-work, section.thoughts {
	padding-bottom: 40px;
}

section.recent-work a:hover, section.thoughts a:hover {
	border-bottom: none;
}

section.recent-work p, section.thoughts p {
	text-align: center;
}

section.thoughts {
	background: #333;
}

section.thoughts h2, section.thoughts p a {
	color: #FFF;
}

section.recent-work h2 {
	padding-top: 0px !important;
	background: none;
}

@media only screen and (max-width: 767px) {
	section {
		padding-left: 20px;
		padding-right: 20px;
		margin-bottom: 30px;
	}
	
	section p {
		width: 100%;
		font-size: 26px;
		line-height: 32px;
	}
}