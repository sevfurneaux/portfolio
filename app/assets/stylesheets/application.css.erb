header {
	background: #FFF;
	padding-top: 20px;
	padding-bottom: 20px;
	margin-bottom: 35px;
	border-bottom: 1px solid #EEE;
}

header img {
	display: block;
	margin: 0 auto;
	width: 80px;
	border-radius: 80px;
}

nav {
	top: 50px;
	right: 30px;
	position: absolute;
}

nav ul li {
	display: inline-block;
	margin-right: 22px;
}

nav ul li a {
	color: #ef4723;
}

h2 {
	color: #333;
	font-family: 'AvenirLT-Black';
	background-size: 10px 10px;
	/*background-image: url(<%= asset_path 'dot.png' %>);*/
	background-repeat: no-repeat;
	background-position: center top;
	text-align: center;
	font-size: 16px !important;
	letter-spacing: 0.10em;
	padding-top: 30px !important;
	margin-bottom: 20px !important;
	display: block;
}

section {
	margin-bottom: 40px;
}

section:last-child {
	margin-bottom: 80px;
}

section p {
	color: #666;
	font-size: 24px;
	line-height: 35px;
	width: 640px;
	margin: 0 auto;
}

section p a {
	color: #ef4723;
}

section p a:hover {
	text-decoration: underline;
}

section p a:hover {
	color: #FF6D51;
}

section.where {
	margin-bottom: 80px;
}

section.recent-work {
	padding-top: 35px;
	background: #FF6D51;
	margin-bottom: 0px;
}

section.recent-work, section.thoughts {
	padding-bottom: 40px;
}

section.recent-work a {
	color: #FFF;
}

section.recent-work a:hover {
	color: #FFF;
}

section.recent-work p, section.thoughts p {
	text-align: center;
}

section.thoughts {
	background: #333;
}

section.thoughts h2, section.thoughts p a {
	color: #FFF;
}

section.recent-work h2 {
	padding-top: 0px !important;
	background: none;
}

@media only screen and (max-width: 767px) {
	br {
		display: none;
	}

	section {
		padding-left: 20px;
		padding-right: 20px;
		margin-bottom: 30px;
	}
	
	section p {
		width: 100%;
	}
}